{
  "name": "storekeeper",
  "version": "0.0.1",
  "description": "A NodeJS backend specialized for use with lua-webdispatcher and DCS",
  "private": true,
  "scripts": {
    "tsc": "tsc",
    "start": "node ./dist/bundle.js",
    "build": "npx webpack --mode production",
    "build:dev": "npx webpack --mode development",
    "dev": "ts-node-dev --respawn --transpileOnly ./src/app.ts",
    "prod": "npm run build && npm start",
    "eslint": "eslint src --ext ts",
    "test": "mocha -r ts-node/register tests/**/*.test.ts",
    "coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test",
    "docs": "aglio --theme-variables slate -i docs/api.apib -o docs/index.html",
    "docs:host": "aglio --theme-variables slate -i docs/api.apib -s"
  },
  "keywords": [
    "dcs",
    "node",
    "typescript",
    "lua",
    "backend"
  ],
  "author": "jkhoel",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mysql": "^2.17.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.5",
    "@types/express": "^4.17.2",
    "@types/mocha": "^5.2.7",
    "@types/mysql": "^2.15.8",
    "@typescript-eslint/parser": "^2.7.0",
    "aglio": "^2.3.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "sinon": "^7.5.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  }
}
